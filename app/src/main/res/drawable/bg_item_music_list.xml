<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#6E61E9"
                android:startColor="#BE73F3" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <ripple android:color="#DACCFD">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#F4F1FF" />
                    <corners android:radius="@dimen/_19sdp" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>